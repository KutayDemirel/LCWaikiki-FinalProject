@model ProductOfferViewModel

@section Scripts{

<script>
    function check(t) {
                var id = $(t).attr("Id");
                //$("#myForm").valid()
                if ($(t).val() != "") {
                    $(".form-control").each(function () {
                        if ($(this).attr("Id") != id) {
                            $(this).attr("disabled", "disabled");
                        }
                    })
                } else {
                    $(".form-control").each(function () {
                        $(this).removeAttr("disabled");

                    })
                }

            }
</script>
}

<h1>Make an Offer ?</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form enctype="multipart/form-data" method="post" class="mt-3" id="myForm">
                <input type="hidden" name="Offer.ProductId" value="@Model.Product.Id"/>
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <div class="form-group">
                        <label asp-for="@Model.Offer.Price" class="col-form-label">Percentage Options</label>
                        <select asp-for="@Model.Offer.Price" asp-items="ViewBag.Percentages" class="form-control" onblur="check(this)">
                            <option value="-1" disabled selected>Please choose..</option>
                        </select>
                        <span asp-validation-for="@Model.Offer.Price" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="form-group row">
                <label asp-for="@Model.Offer.Price" class="col-sm-2 col-form-label">Offer Price</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Offer.Price" type="number" class="form-control" placeholder="You may write your offer here" id="content" onblur="check(this)">
                    <span asp-validation-for="@Model.Offer.Price" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="submit" class=" float-right" value="Offer" />
                </div>
            </div>
        </form>
    </div>



    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Özet Bilgiler</span>
        </h4>
        <ul class="list-group mb-3">

            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <img class="card-img-top" src="~/images/@Model.Product.ImageUrl" alt="" />
                    <h6>@Model.Product.Name</h6>
                </div>
                <span class="text-muted">@Model.Product.Price.ToString("c")</span>
            </li>
            @*}          *@

            @*<li class="list-group-item d-flex justify-content-between">
                <span>Toplam (TL)</span>
                <strong>@Model.CartModel.TotalPrice().ToString("c")</strong>
                </li>*@
        </ul>

    </div>
</div>