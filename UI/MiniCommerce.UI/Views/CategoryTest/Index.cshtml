@using MiniCommerce.UI.Controllers
@model List<Class1>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsimleri</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr> 
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/CategoryTest/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>